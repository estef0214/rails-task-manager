<h1>My tasks</h1>

  <% @tasks.each do |task| %>
    <p>
      <%= task.completed ? "☑️" : "⬜️"%>
      <%= link_to task.title, task_path(task)%>
      <%= link_to "🗑", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </p>
  <% end %>

<p><%= link_to "Add a new task", new_task_path%></p>
